@model ECommerceAuthMVC.Models.ResetPasswordViewModel
<h2>Reset Password</h2>
<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Token" />
    <div><label>Email</label><input asp-for="Email" /></div>
    <div><label>New Password</label><input asp-for="Password" type="password" /></div>
    <div><label>Confirm</label><input asp-for="ConfirmPassword" type="password" /></div>
    <button type="submit">Reset</button>
</form>
